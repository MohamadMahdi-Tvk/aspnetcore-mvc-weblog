@model UpdateRoleViewModel


<div id="editRoleAdmin" class="section card p-4">
    <h4 class="mb-3">ویرایش نقش ادمین</h4>
    <form asp-controller="Role" asp-action="UpdateRole" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label class="form-label">نام نقش کاربری</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">اعمال تغییرات</button>
    </form>
</div>
