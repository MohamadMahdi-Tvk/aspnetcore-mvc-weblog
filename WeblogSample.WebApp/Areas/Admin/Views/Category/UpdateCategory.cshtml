@model UpdateCategoryViewModel

<div id="addRole" class="section card p-4">

    <h4 class="mb-3">ویرایش دسته بندی</h4>

    <form asp-controller="Category" asp-action="UpdateCategory" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">نام دسته بندی</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success w-100">اعمال تغییرات</button>
    </form>
</div>